<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/medimage"
        android:layout_width="92dp"
        android:layout_height="61dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_text_back"/>

    <TextView
        android:id="@+id/medi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/medimage"
        android:text="Medicine Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/salt_comp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/medi_name"
        android:layout_toEndOf="@id/medimage"
        android:text="Composition"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/price"
        android:layout_toEndOf="@id/medimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/salt_comp"
        android:text="Price"
        android:textSize="14sp"
        android:textStyle="italic" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/price"
        android:layout_marginTop="10dp"
        android:background="#DADBDB" />
</RelativeLayout>
