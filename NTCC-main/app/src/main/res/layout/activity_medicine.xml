<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.threehero.myhealth.main.Medicine">





    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="10dp"
        android:background="#14726A"
        android:padding="6dp"
        android:src="@drawable/back_icon" />

    <TextView
        android:id="@+id/med_pagelabel"
        android:layout_width="305dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@id/back_btn"
        android:background="#199287"
        android:paddingTop="10dp"
        android:text="Medicine"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/cart_btn"
        android:layout_width="62dp"
        android:layout_height="50dp"
        android:layout_marginStart="0dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@id/med_pagelabel"
        android:background="#14726A"
        android:padding="5dp"
        android:src="@drawable/carthome" />
    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/med_pagelabel"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/edit_text_back"
        android:drawableStart="@drawable/ic_search"
        android:hint="search for medicines"
        android:ems="10"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:visibility="visible" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/search_bar"/>

</RelativeLayout>