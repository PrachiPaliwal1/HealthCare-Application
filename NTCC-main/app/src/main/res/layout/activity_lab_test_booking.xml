<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.threehero.myhealth.main.LabTests">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="10dp"
        android:background="#14726A"
        android:padding="6dp"
        android:src="@drawable/back_icon" />

    <TextView
        android:id="@+id/med_pagelabel"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_toEndOf="@id/back_btn"
        android:layout_toStartOf="@id/cart_btn"
        android:background="#199287"
        android:gravity="center"
        android:padding="10dp"
        android:text="Lab Test Appointment"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/cart_btn"
        android:layout_width="62dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:background="#14726A"
        android:padding="5dp"
        android:src="@drawable/carthome" />

    <LinearLayout
        android:id="@+id/test_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/back_btn"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/selected_test_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/selected_test_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price" />
    </LinearLayout>

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/test_details_layout" />

    <EditText
        android:id="@+id/address_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/calendarView"
        android:hint="Enter Address" />

    <EditText
        android:id="@+id/phone_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/address_input"
        android:hint="Enter Phone Number"
        android:inputType="phone" />

    <Button
        android:id="@+id/book_test_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_input"
        android:layout_centerHorizontal="true"
        android:text="Book Test" />

</RelativeLayout>